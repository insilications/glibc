export FFLAGS="-O3 -m32 -march=skylake -mtune=skylake -mstackrealign -Wl,-z,max-page-size=0x1000 -pipe -Wno-error=maybe-uninitialized"
export CXXFLAGS="-fvisibility-inlines-hidden -O3 -m32 -march=skylake -mtune=skylake -mstackrealign -Wl,-z,max-page-size=0x1000 -pipe -Wno-error=maybe-uninitialized"
export LDFLAGS="-O3 -m32 -march=skylake -mtune=skylake -mstackrealign -Wl,-z,max-page-size=0x1000 -pipe -Wno-error=maybe-uninitialized"
export ASMFLAGS="-O3 -m32 -march=skylake -mtune=skylake -mstackrealign -Wl,-z,max-page-size=0x1000 -pipe -Wno-error=maybe-uninitialized"
unset ASFLAGS
